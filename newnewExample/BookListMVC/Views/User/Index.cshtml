@model IEnumerable<User>

@{
    ViewBag.Title = "User List";
}
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Department</td>
            </tr>
        }
    </tbody>
</table>
